@model IEnumerable<ddd.Models.T_Student>

@{
    ViewBag.Title = "دانشجویان";
    int counter = 4000;
}

<div class="jumbotron">
    <h2 class="text-center">لیست دانشجویان</h2>
</div>

<hr />
<p>
    @Html.ActionLink("ثبت نام دانشجوی جدید", "Create","Student", new {@class="btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            ردیف
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.family)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.registerDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isActive)
        </th>
        <th>عملیات</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @counter
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.family)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.registerDate)
        </td>
        <td>
            @if (item.isActive == true)
                {
                    <span style="color:green">فعال</span>
                }
             else
                {
                    <span style="color:red">مسدود</span>
                }
        </td>
        <td>
            @Html.ActionLink("ویرایش", "Edit", new { id=item.id } , new {@class ="btn btn-warning" }) |
            @Html.ActionLink("جزئیات", "Details", new { id=item.id }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("حذف", "Delete", new { id=item.id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
    counter++;
}

</table>
