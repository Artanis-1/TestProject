@model ddd.Models.T_Student

@{
    string name = Model.name + " " + Model.family;
    ViewBag.Title = "مشاهده" + " " + name;
}

<div class="jumbotron text-center">
    <h3>مشاهده @name</h3>
</div>

<div class="form-row">

    <div class="col">
        <div class="form-label">
            @Html.DisplayNameFor(model => model.name)
        </div>
        <div class="form-control">
            @Html.DisplayFor(model => model.name)
        </div>
    </div>

    <div class="col">
        <div class="form-label">
            @Html.DisplayNameFor(model => model.family)
        </div>
        <div class="form-control">
            @Html.DisplayFor(model => model.family)
        </div>
    </div>
</div>
<br />

<div class="form-row">

    <div class="col">
        <div class="form-label">
            @Html.DisplayNameFor(model => model.email)
        </div>
        <div class="form-control">
            @Html.DisplayFor(model => model.email)
        </div>
    </div>

    <div class="col">
        <div class="form-label">
            @Html.DisplayNameFor(model => model.phone)
        </div>
        <div class="form-control">
            @Html.DisplayFor(model => model.phone)
        </div>
    </div>
</div>
<br />

<div class="form-row">

    <div class="col">
        <div class="form-label">
            @Html.DisplayNameFor(model => model.gender)
        </div>
        <div class="form-control">
            @if (Model.gender == true)
            {
                <span>مرد</span>
            }
            else
            {
                <span>زن</span>
            }
        </div>
    </div>

    <div class="col">
        <div class="form-label">
            @Html.DisplayNameFor(model => model.age)
        </div>
        <div class="form-control">
            @Html.DisplayFor(model => model.age)
        </div>
    </div>
</div>
<br />

<div class="form-row">

    <div class="col">
        <div class="form-label">
            @Html.DisplayNameFor(model => model.isActive)
        </div>
        <div class="form-control">
            @if (Model.isActive == true)
            {
                <span style="color:green">فعال</span>
            }
            else
            {
                <span style="color:red">غیر فعال</span>
            }
        </div>
    </div>

    <div class="col">
        <div class="form-label">
            @Html.DisplayNameFor(model => model.martial)
        </div>
        <div class="form-control">
            @if (Model.martial == true)
            {
                <span>متاهل</span>
            }
            else
            {
                <span>مجرد</span>
            }
        </div>
    </div>
</div>
<br />

<div class="form-row">

    <div class="col">
        <div class="form-label">
            @Html.DisplayNameFor(model => model.imageName)
        </div>
        <img src="~/images/profileImages/@Model.imageName" style="width:120px; height:120px" />
    </div>

    <div class="col">
        <div class="form-label">
            @Html.DisplayNameFor(model => model.registerDate)
        </div>
        <div class="form-control">
            @Html.DisplayFor(model => model.registerDate)
        </div>
    </div>
</div>



<div class="form-group" style="float: left !important; margin-top: 15px !important; margin-bottom: 15px !important">
    @Html.ActionLink("بازگشت به لیست", "Index", null, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("ویرایش اطلاعات" + " " + name, "Edit", new { id = Model.id }, new { @class = "btn btn-warning" })
</div>
